@model CompanyBindingModel


    <div class="modal fade" id="company-modal" tabindex="-1" role="dialog" aria-hidden="true">
        @using (Ajax.BeginForm(Model.Action, "Customers", null, new AjaxOptions
        {
            HttpMethod = "POST",
            LoadingElementId = "master-loader",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "hideModal"

        }, new { id = "company-modal-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Company</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Company name</label>
                            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                        </div>

                        @Html.ValidationSummary("", new { @class = "text-danger"})
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        }
    </div>

<script>
    $("#company-modal").modal()

       function hideModal() {
        $('#company-modal').modal('hide');
    }

</script>
